# =============================================================================
# ARCHIVO DE EJEMPLO - COPIAR A .env.dev o .env.prod Y COMPLETAR
# Instrucciones: cp .env.example .env.dev
# =============================================================================

# =============================================================================
# ENTORNO
# =============================================================================
ENVIRONMENT=dev                    # dev | prod | test
DEBUG=True                         # True | False

# =============================================================================
# SERVIDOR
# =============================================================================
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# =============================================================================
# BASE DE DATOS (REQUERIDO)
# =============================================================================
MARIADB_HOST=db                    # "db" en Docker | "localhost" en local
MARIADB_PORT=3306
MARIADB_DATABASE=sgc_db_dev        # sgc_db_dev | sgc_db_prod
MARIADB_USER=sgc_user
MARIADB_PASSWORD=cambiar_password  # OBLIGATORIO - Mínimo 16 caracteres
MARIADB_ADMIN=sgc_admin
MARIADB_ADMIN_PASSWORD=cambiar_admin_password  # OBLIGATORIO - Mínimo 16 caracteres
MARIADB_ROOT_PASSWORD=cambiar_root_password    # OBLIGATORIO - Mínimo 16 caracteres

# Pool de conexiones (opcional - usa defaults si no se especifica)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# SEGURIDAD (REQUERIDO)
# =============================================================================
SECRET_KEY=cambiar_secret_key_minimo_32_caracteres_aqui
SALT=cambiar_salt_minimo_32_caracteres_aqui
ALGORITHM=HS256
HASH_ALGORITHM=bcrypt
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# ARCHIVOS
# =============================================================================
UPLOAD_DIR=file_uploads            # Directorio base de uploads
MAX_UPLOAD_SIZE=10485760           # 10485760 (10 MB en bytes)
ALLOWED_EXTENSIONS=.pdf            # .pdf (separar por comas si son varios: .pdf,.jpg,.png)

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=                         # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_DIR=                           # logs
LOG_FILE=                          # app.log

# =============================================================================
# SMTP (Notificaciones por email - Opcional)
# =============================================================================
SMTP_ENABLED=                      # True | False
SMTP_SERVER=                       # smtp.gmail.com
SMTP_PORT=                         # 587
SMTP_USERNAME=                     # your_email@gmail.com
SMTP_PASSWORD=                     # app_password (no tu contraseña normal)
SMTP_FROM_EMAIL=                   # noreply@sgsct.com
SMTP_TLS=                          # True

# =============================================================================
# PAGINACIÓN (opcional - usa defaults de settings.py)
# =============================================================================
# DEFAULT_PAGE_SIZE=               # 20
# MAX_PAGE_SIZE=                   # 100

# =============================================================================
# API (opcional - usa defaults de settings.py)
# =============================================================================
# API_V1_PREFIX=                   # /api/v1
# PROJECT_NAME=                    # Sistema de Gestión...
# VERSION=                         # 1.0.0