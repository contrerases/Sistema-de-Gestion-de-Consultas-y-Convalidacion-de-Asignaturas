FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    default-libmysqlclient-dev \
    pkg-config \
    python3-dev \
    libssl-dev \
    libffi-dev \
    cargo \
    rustc \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements (desde Server/ si Railway no usa Root Directory)
COPY ./requirements.txt .

# Actualizar pip, setuptools y wheel
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Instalar dependencias Python (solo producci칩n)
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c칩digo fuente
COPY . .

# Crear estructura de directorios de archivos
RUN mkdir -p /app/file_uploads/convalidations/personal_projects && \
    mkdir -p /app/file_uploads/convalidations/certificated_courses && \
    mkdir -p /app/file_uploads/workshops/syllabus && \
    mkdir -p /app/file_uploads/workshops/convalidation_list

# Exponer puerto
EXPOSE 8000

# Comando de inicio para producci칩n (con workers)
# Railway provee $PORT autom치ticamente
CMD uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000} --workers 4
