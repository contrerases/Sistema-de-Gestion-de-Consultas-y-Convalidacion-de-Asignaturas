{
  "name": "SGC - DEV CONTAINER",
  "dockerComposeFile": "docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/workspace",
  "envFile": ".env",
  
  "customizations": {
    "vscode": {
      "extensions": [
        // Vue.js y TypeScript
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin",
        "ms-vscode.vscode-typescript-next",
        
        // Python
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        
        // Docker
        "ms-azuretools.vscode-docker",
        
        // Git
        "eamodio.gitlens",
        
        // Tailwind CSS
        "bradlc.vscode-tailwindcss",
        
        // Auto Rename Tag
        "formulahendry.auto-rename-tag",
        
        // Path Intellisense
        "christian-kohler.path-intellisense",
        
        // Prettier
        "esbenp.prettier-vscode",
        
        // Error Lens
        "usernamehw.errorlens",
        
        // Bracket Pair Colorizer
        "CoenraadS.bracket-pair-colorizer-2",
        
        // Material Icon Theme
        "PKief.material-icon-theme"
      ],
      "settings": {
        "typescript.tsdk": "/workspace/client/node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "typescript.preferences.importModuleSpecifier": "non-relative",
        "js/ts.implicitProjectConfig.checkJs": true,
        "typescript.preferences.tsconfig": "/workspace/client/tsconfig.editor.json",
        
        // Python settings
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=88"],
        
        // Editor settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [88, 100],
        
        // File associations
        "files.associations": {
          "*.vue": "vue"
        },
        
        // Terminal settings
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        
        // Workspace settings
        "files.exclude": {
          "**/node_modules": true,
          "**/.git": true,
          "**/.DS_Store": true
        },
        
        // Search settings
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.git": true
        }
      }
    }
  },
  
  "forwardPorts": [5173, 8000, 3306],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (Vue.js)",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Backend (FastAPI)",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "Database (MariaDB)",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "echo 'ðŸš€ Entorno de desarrollo listo! Frontend: http://localhost:5173, Backend: http://localhost:8000'",
  
  "remoteUser": "node",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  
  // ConfiguraciÃ³n adicional para mejorar la experiencia
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
} 